# =============================================================================
# Lombardia Healthcare Agent - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git (it contains secrets!)
# =============================================================================

# -----------------------------------------------------------------------------
# AI Services (Required)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# -----------------------------------------------------------------------------
# Cerba Healthcare API (Required)
# -----------------------------------------------------------------------------
CERBA_CLIENT_ID=your_cerba_client_id
CERBA_CLIENT_SECRET=your_cerba_client_secret
CERBA_TOKEN_URL=https://cerba-api.example.com/oauth/token
CERBA_BASE_URL=https://cerba-api.example.com/api/v1

# -----------------------------------------------------------------------------
# Server Configuration (Required)
# -----------------------------------------------------------------------------
SERVER_URL=ws://your-azure-vm-ip:8000/ws
LOCAL_SERVER_URL=http://localhost:8000

# Info Agent Configuration (if using separate info agent service)
INFO_AGENT_PORT=8081
INFO_AGENT_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Azure Storage (Required for call recordings and logs)
# -----------------------------------------------------------------------------
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net

# -----------------------------------------------------------------------------
# Azure Speech Services (Optional - if using Azure STT instead of Deepgram)
# -----------------------------------------------------------------------------
AZURE_SPEECH_API_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=westeurope

# STT Provider Selection (deepgram or azure)
STT_PROVIDER=deepgram

# -----------------------------------------------------------------------------
# Daily.co (Required for test.py voice testing only)
# -----------------------------------------------------------------------------
DAILY_API_KEY=your_daily_api_key
DAILY_API_URL=https://api.daily.co/v1

# -----------------------------------------------------------------------------
# Twilio (Optional - if using Twilio for calls instead of Talkdesk)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:port/database_name
DB_PASS=your_database_password

# -----------------------------------------------------------------------------
# Supabase (Optional - if using Supabase for database)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANAON_KEY=your_anon_key
SUPABASE_SECRET_KEY=your_secret_key

# -----------------------------------------------------------------------------
# Info Agent APIs (Required for info agent functionality)
# -----------------------------------------------------------------------------
KNOWLEDGE_BASE_URL=https://your-knowledge-base-api.com
EXAM_BY_VISIT_URL=https://your-api.com/exam-by-visit
EXAM_BY_SPORT_URL=https://your-api.com/exam-by-sport
PRICE_NON_AGONISTIC_URL=https://your-api.com/pricing/non-agonistic
PRICE_AGONISTIC_URL=https://your-api.com/pricing/agonistic
CALL_GRAPH_URL=https://your-api.com/call-graph

# API Configuration
API_TIMEOUT=30

# Info Agent Assistant (if using OpenAI Assistants API)
INFO_AGENT_ASSISTANT_ID=asst_xxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Vector Database (Optional - if using Pinecone for RAG)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=your_pinecone_api_key

# -----------------------------------------------------------------------------
# Email Notifications (Optional - using SendGrid)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
ALERT_FROM_EMAIL=alerts@yourdomain.com
ALERT_TO_EMAILS=admin@yourdomain.com,support@yourdomain.com

# -----------------------------------------------------------------------------
# Frontend Configuration (if using dashboard - moved to separate repo)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://your-api-url:8000

# -----------------------------------------------------------------------------
# Data Files (Local development only)
# -----------------------------------------------------------------------------
DATA_FILE_PATH=/app/data/city_codes.json

# =============================================================================
# DEPLOYMENT NOTES:
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in all required values (marked as "Required" above)
# 3. Optional values can be left empty if not using those features
# 4. For Azure VM deployment, place .env in /home/azureuser/voilavoiceagent/
# 5. Restart services after changing .env: docker-compose restart
# =============================================================================
